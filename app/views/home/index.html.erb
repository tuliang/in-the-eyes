<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% @images.each do |image| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <%= image_tag "language-fanboys.jpg", class: "card-img-top", alt: "Card image cap" %>
            <div class="card-body">
              <p class="card-title"><%= image.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                </div>
                <small class="text-muted"><%= time_ago_in_words image.created_at %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>